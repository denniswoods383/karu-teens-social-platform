# ========================================
# KARU TEENS SOCIAL PLATFORM - ENVIRONMENT VARIABLES
# ========================================

# ========================================
# PRIMARY SUPABASE ACCOUNT (REQUIRED)
# ========================================
NEXT_PUBLIC_SUPABASE_URL=your_primary_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_primary_supabase_anon_key

# ========================================
# ADDITIONAL SUPABASE ACCOUNTS (OPTIONAL - UP TO 5)
# ========================================
NEXT_PUBLIC_SUPABASE_URL_1=your_supabase_url_1
NEXT_PUBLIC_SUPABASE_ANON_KEY_1=your_supabase_anon_key_1

NEXT_PUBLIC_SUPABASE_URL_2=your_supabase_url_2
NEXT_PUBLIC_SUPABASE_ANON_KEY_2=your_supabase_anon_key_2

NEXT_PUBLIC_SUPABASE_URL_3=your_supabase_url_3
NEXT_PUBLIC_SUPABASE_ANON_KEY_3=your_supabase_anon_key_3

NEXT_PUBLIC_SUPABASE_URL_4=your_supabase_url_4
NEXT_PUBLIC_SUPABASE_ANON_KEY_4=your_supabase_anon_key_4

NEXT_PUBLIC_SUPABASE_URL_5=your_supabase_url_5
NEXT_PUBLIC_SUPABASE_ANON_KEY_5=your_supabase_anon_key_5

# ========================================
# PRIMARY CLOUDINARY ACCOUNT (REQUIRED)
# ========================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_primary_cloudinary_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=karu_uploads
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_cloudinary_api_key

# ========================================
# ADDITIONAL CLOUDINARY ACCOUNTS (OPTIONAL - UP TO 5)
# ========================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME_1=your_cloudinary_name_1
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET_1=karu_uploads

NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME_2=your_cloudinary_name_2
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET_2=karu_uploads

NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME_3=your_cloudinary_name_3
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET_3=karu_uploads

NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME_4=your_cloudinary_name_4
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET_4=karu_uploads

NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME_5=your_cloudinary_name_5
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET_5=karu_uploads

# ========================================
# STREAMING CLOUDINARY ACCOUNTS (FOR MOVIES/SERIES)
# ========================================
NEXT_PUBLIC_STREAMING_CLOUDINARY_1=your_streaming_cloudinary_1
NEXT_PUBLIC_STREAMING_PRESET_1=streaming_uploads

NEXT_PUBLIC_STREAMING_CLOUDINARY_2=your_streaming_cloudinary_2
NEXT_PUBLIC_STREAMING_PRESET_2=streaming_uploads

NEXT_PUBLIC_STREAMING_CLOUDINARY_3=your_streaming_cloudinary_3
NEXT_PUBLIC_STREAMING_PRESET_3=streaming_uploads

# ========================================
# APPLICATION SETTINGS
# ========================================
NEXT_PUBLIC_APP_URL=https://karuteens.site
API_URL=https://karuteens.site/api

# ========================================
# DEVELOPMENT/PRODUCTION MODE
# ========================================
NODE_ENV=development

# ========================================
# NOTES:
# ========================================
# 1. Replace all "your_*" values with actual credentials
# 2. Primary accounts are required for basic functionality
# 3. Additional accounts are for load balancing and redundancy
# 4. Streaming accounts are separate for movies/series content
# 5. Keep this file secure and never commit to version control
# 6. Copy to .env.local for Next.js to read automatically